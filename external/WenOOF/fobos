[modes]
modes = shared-gnu static-gnu
        shared-gnu-debug static-gnu-debug
        shared-intel static-intel
        shared-intel-debug static-intel-debug
        tests-gnu tests-intel
        tests-gnu-debug tests-intel-debug

[common-variables]
$CSHARED_GNU = -cpp -c -fPIC -frealloc-lhs
$CSHARED_INT = -cpp -c -fpic -assume realloc_lhs
$LSHARED     = -shared
$CSTATIC_GNU = -cpp -c -frealloc-lhs
$CSTATIC_INT = -cpp -c -assume realloc_lhs
$DEBUG_GNU   = -O0 -g3 -Warray-bounds -Wcharacter-truncation -Wline-truncation -Wimplicit-interface -Wimplicit-procedure -Wunderflow -Wuninitialized -fcheck=all -fmodule-private -ffree-line-length-132 -fimplicit-none -fbacktrace -fdump-core -finit-real=nan -std=f2008 -fall-intrinsics
$DEBUG_INT   = -O0 -debug all -check all -warn all -extend-source 132 -traceback -gen-interfaces#-fpe-all=0 -fp-stack-check -fstack-protector-all -ftrapuv -no-ftz -std03
$OPTIMIZE    = -O2

# main modes
[shared-gnu]
template  = template-shared-gnu
build_dir = shared
output    = libwenoof.so
mklib     = shared

[static-gnu]
template  = template-static-gnu
build_dir = static
output    = libwenoof.a
mklib     = static

[shared-gnu-debug]
template  = template-shared-gnu-debug
build_dir = shared
output    = libwenoof.so
mklib     = shared

[static-gnu-debug]
template  = template-static-gnu-debug
build_dir = static
output    = libwenoof.a
mklib     = static

[shared-intel]
template  = template-shared-intel
build_dir = shared
output    = libwenoof.so
mklib     = shared

[static-intel]
template  = template-static-intel
build_dir = static
output    = libwenoof.a
mklib     = static

[shared-intel-debug]
template  = template-shared-intel-debug
build_dir = shared
output    = libwenoof.so
mklib     = shared

[static-intel-debug]
template  = template-static-intel-debug
build_dir = static
output    = libwenoof.a
mklib     = static

[tests-gnu]
compiler  = gnu
cflags    = $CSTATIC_GNU $OPTIMIZE
lflags    = $OPTIMIZE
build_dir = tests
mod_dir   = mod
obj_dir   = obj
src       = src/
colors    = True
quiet     = False
log       = True
jobs      = 2

[tests-intel]
compiler  = intel
cflags    = $CSTATIC_INT $OPTIMIZE
lflags    = $OPTIMIZE
build_dir = tests
mod_dir   = mod
obj_dir   = obj
src       = src/
colors    = True
quiet     = False
log       = True
jobs      = 2

[tests-gnu-debug]
compiler  = gnu
cflags    = $CSTATIC_GNU $DEBUG_GNU
lflags    = $DEBUG_GNU
build_dir = tests
mod_dir   = mod
obj_dir   = obj
src       = src/
colors    = True
quiet     = False
log       = True
jobs      = 2

[tests-intel-debug]
compiler  = intel
cflags    = $CSTATIC_INT $DEBUG_INT
lflags    = $DEBUG_INT
build_dir = tests
mod_dir   = mod
obj_dir   = obj
src       = src/
colors    = True
quiet     = False
log       = True
jobs      = 2

#templates
[template-shared-gnu]
